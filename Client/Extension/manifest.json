{
	"manifest_version": 2,
	"name": "MintSync",
	"version": "1.50",

	"description": "Secure, self-hosted client-side decrypted password storage",
	"permissions": [
		"activeTab",
		"tabs",
		"storage"
	],

	"browser_action": {
		"default_icon": "img/button_icon.png",
		"default_title": "MintSync",
		"default_popup": "popup.html"
	},

	"options_ui": {
		"page": "options.html"
	},

	"background": { 
		"persistent": true, 
		"page": "index.html" 
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"includes/sizzle.js", 
				"includes/ins.js"
			]
		}
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}